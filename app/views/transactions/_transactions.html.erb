<div class="column is-half">
	<article class="media-box">
		<figure class="media-left"></figure>
		<div class="media-content"></div>
	</article>

  <% @transactions.each do | transaction | %>
    <div class="box">
    	<article class="media">
    		<div class="media-left">
    			
    		</div>
    		<div class="media-content">
    			<div class="content">
    				From: <strong><%= transaction.from %></strong><br/>
    				To: <strong><%= transaction.to %></strong><br/>
    				<p>Amount: <strong><%= transaction.amount %></strong></p>
                    Client ID: <strong><%= transaction.client_id %> </strong>
                    <%= link_to transaction, method: :delete, data: { confirm: "Are you sure you want to delete this transaction?" } do %>
                        <span class="icon"><i class="fa fa-trash-o" aria-hidden="true"></i></span>
                    <% end %>
    			</div>
    		</div>
    	</article>
    </div>
  <% end %>

</div>