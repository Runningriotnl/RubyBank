<div class="column is-half">
	<article class="media-box">
		<figure class="media-left"></figure>
		<div class="media-content"></div>
	</article>

  <% @transactions.each do | transaction | %>
    <% if transaction.to == current_user.name || transaction.from == current_user.name %>
      <div class="box">
      	<article class="media">
      		<div class="media-left">
      			
      		</div>
      		<div class="media-content">
      			<div class="content">
      				<%= transaction.created_at.localtime.strftime("%d-%m-%y at %H:%M") %> <br/>

                    From: <strong><%= transaction.from %></strong><br/>
      				To: <strong><%= transaction.to %></strong><br/>
                    <% if transaction.to == current_user.name %>
      				  Amount: +<strong><%= transaction.amount %></strong><br/>
                    <% else %>
                      Amount: -<strong><%= transaction.amount %></strong><br/>
                    <% end %>

                      
                      <%= link_to transaction, method: :delete, data: { confirm: "Are you sure you want to delete this transaction?" } do %>
                          <span class="icon"><i class="fa fa-trash-o" aria-hidden="true"></i></span>
                      <% end %>
      			</div>
      		</div>
      	</article>
      </div>
    <% end %>
  <% end %>

</div>